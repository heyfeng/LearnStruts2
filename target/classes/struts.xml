<struts>
    <!--<constant name="struts.i18n.encoding" value="utf-8"/>-->
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <package name="default" namespace="/" extends="struts-default">
        <!-- 配置默认Action-->
        <default-action-ref name="defaultAction"/>
        <action name="defaultAction" >
            <result>/index.jsp</result>
        </action>
        <!-- 动作设置 name指定多做名字 class指定动作对应的实体类 -->
        <action name="hello" class="me.caofeng.action.HelloAction">
            <!-- 返回结果设置 name接收动作返回的参数，/index.jsp 指定返回的视图-->
            <result name="success">/index.jsp</result>
        </action>

        <!--&lt;!&ndash; 登录 &ndash;&gt;-->
        <action name="login" class="me.caofeng.action.LoginAction" method="login">
            <!-- 返回结果设置 name接收动作返回的参数，/index.jsp 指定返回的视图-->
            <result name="success">/success.jsp</result>
            <result name="input">/login.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

